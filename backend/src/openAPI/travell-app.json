{
  "openapi": "3.0.0",
  "info": {
    "title": "Trevell app",
    "version": "1.0.0-oas3"
  },
  "paths": {
    "/countries": {
      "get": {
        "tags": ["all users"],
        "responses": {
          "200": {
            "description": "list of countries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SimpleCountry"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/countries/{countryISO}": {
      "get": {
        "tags": ["all users"],
        "parameters": [
          {
            "name": "countryISO",
            "in": "path",
            "description": "country ISO to detail",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "country and attractions",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ComplexCountry"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/body"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200"
                }
              }
            }
          }
        }
      }
    },
    "/signup": {
      "post": {
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/body_1"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_1"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SimpleCountry": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "vidoUrl": {
            "type": "string",
            "example": "www.vido.com"
          },
          "ISOCode": {
            "type": "string",
            "example": "BY"
          },
          "capital": {
            "$ref": "#/components/schemas/Capital"
          },
          "description": {
            "type": "string"
          },
          "currency": {
            "type": "string",
            "example": "BYN"
          }
        }
      },
      "ComplexCountry": {
        "allOf": [
          {
            "$ref": "#/components/schemas/SimpleCountry"
          },
          {
            "type": "object",
            "properties": {
              "attractions": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Attraction"
                }
              }
            }
          }
        ]
      },
      "Capital": {
        "type": "object",
        "properties": {
          "coordinates": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "name": {
            "type": "string",
            "example": "Minsk"
          }
        }
      },
      "Attraction": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "OMON"
          },
          "description": {
            "type": "string"
          },
          "rating": {
            "type": "number"
          },
          "ratings": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Attraction_ratings"
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Vasya"
          },
          "avatar": {
            "type": "string"
          }
        }
      },
      "Attraction_ratings": {
        "type": "object",
        "properties": {
          "score": {
            "type": "number"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "body": {
        "type": "object",
        "properties": {
          "login": {
            "type": "string"
          },
          "passwprd": {
            "type": "string"
          }
        }
      },
      "inline_response_200": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean"
          }
        }
      },
      "body_1": {
        "type": "object",
        "properties": {
          "login": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "profileImage": {
            "type": "string",
            "format": "binary"
          }
        }
      },
      "inline_response_200_1": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean"
          },
          "reason": {
            "type": "string"
          }
        }
      }
    }
  }
}
